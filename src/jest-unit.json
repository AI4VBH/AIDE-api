{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "moduleNameMapper": {
    "^shared/(.*)": "<rootDir>/src/shared/$1",
    "^modules/(.*)": "<rootDir>/src/modules/$1",
    "^common/(.*)": "<rootDir>/src/common/$1",
    "^test/(.*)": "<rootDir>/test/$1"
  },
  "rootDir": "../",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node"
}